{
	"globals": {
		"localStorage": true,
		"document": true,
		"window": true
	},
	"env": {
		"jest": true
	},
	"extends": ["airbnb", "prettier", "prettier/react"],
	"rules": {
		"no-console": "off",
		"react/prop-types": 0,
		"import/prefer-default-export": 0,
		"import/no-extraneous-dependencies": 0,
		"import/no-unresolved": 1,
		"react/forbid-prop-types": 0,
		"react/jsx-filename-extension": [
			1,
			{
				"extensions": [".js"]
			}
		]
	},
	"settings": {
		"import/resolver": {
			"node": {
				"paths": ["src"],
				"extensions": [".js", ".jsx"]
			}
		}
	}
}
